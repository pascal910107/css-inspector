{
  "manifest_version": 3,
  "name": "CSS Inspector Pro",
  "version": "1.0.0",
  "description": "快速檢視和複製網頁元素的 CSS 樣式",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
    }
  },
  "icons": {
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles/content.css"],
      "js": ["scripts/content.js"]
    }
  ]
} 